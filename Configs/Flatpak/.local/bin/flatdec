#!/usr/bin/env bash
if [ ! -f $HOME/.config/flatpaks ]; then
	flatpak list --app --columns=application | sed -n '1!p' | sort | tee $HOME/.config/flatpaks
fi
flatpak install $(cat $HOME/.config/flatpaks) --noninteractive --or-update
flatpak uninstall $(flatpak list --app --columns=application | sed -n '1!p' | cat - $HOME/.config/flatpaks | sort | uniq -u) --noninteractive --delete-data
flatpak uninstall --noninteractive --unused --delete-data
